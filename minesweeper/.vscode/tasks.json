{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build minesweeper",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-O2",
        "main.cpp",
        "Board.cpp",
        "Game.cpp",
        "-o",
        "minesweeper"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
